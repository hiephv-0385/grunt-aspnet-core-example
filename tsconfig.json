{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": false,
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noLib": false,
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "strictNullChecks": true,
        "newLine": "LF"
    },
    "exclude": [
        "node_modules"
    ]
}